# Networka Environment Variables
# Copy this file to .env and fill in your actual credentials
# The .env file is automatically loaded when you run nw commands

# Default credentials for network devices
# These will be used when device-specific or group-specific credentials are not provided
NW_USER_DEFAULT=admin
NW_PASSWORD_DEFAULT=your_secure_password_here

# Device-specific credentials (optional)
# Use pattern: NW_{USER|PASSWORD}_DEVICENAME
# Device names should match those in devices.yml
NW_USER_SW_ACC1=admin
NW_PASSWORD_SW_ACC1=device_specific_password

NW_USER_SW_ACC2=admin
NW_PASSWORD_SW_ACC2=another_device_password

NW_USER_SW_DIST1=admin
NW_PASSWORD_SW_DIST1=distribution_switch_password

# Group-level credentials (optional)
# Use pattern: NW_{USER|PASSWORD}_GROUPNAME
# Group names should match those in groups.yml
NW_USER_ACCESS_SWITCHES=switch_admin
NW_PASSWORD_ACCESS_SWITCHES=access_switches_password

NW_USER_CRITICAL_INFRASTRUCTURE=critical_admin
NW_PASSWORD_CRITICAL_INFRASTRUCTURE=critical_systems_password

# Additional environment variables for configuration
# Optional: Override default directories
# NW_FIRMWARE_DIR=/path/to/firmware
# NW_BACKUP_DIR=/path/to/backups
# NW_LOGS_DIR=/path/to/logs
# NW_RESULTS_DIR=/path/to/results
