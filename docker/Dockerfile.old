FROM python:3.11-slim

# Install UV
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Install minimal required system packages and network debugging tools
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    openssh-client \
    openssh-server \
    iputils-ping \
    traceroute \
    tcpdump \
    nmap \
    netcat-openbsd \
    dnsutils \
    iproute2 \
    net-tools \
    mtr-tiny \
    curl \
    wget \
    whois \
    arp-scan \
    sudo \
    tmux \
    && rm -rf /var/lib/apt/lists/*

# Create networka user for SSH access
RUN useradd -m -s /bin/bash networka && \
    echo 'networka:networka' | chpasswd && \
    usermod -aG sudo networka && \
    echo 'networka ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers

# Configure SSH properly
RUN mkdir -p /var/run/sshd && \
    sed -i 's/#PermitRootLogin prohibit-password/PermitRootLogin no/' /etc/ssh/sshd_config && \
    sed -i 's/#PasswordAuthentication yes/PasswordAuthentication yes/' /etc/ssh/sshd_config && \
    sed -i 's/#PubkeyAuthentication yes/PubkeyAuthentication yes/' /etc/ssh/sshd_config && \
    sed -i 's/#Port 22/Port 22/' /etc/ssh/sshd_config && \
    echo 'UseDNS no' >> /etc/ssh/sshd_config && \
    echo 'PermitEmptyPasswords no' >> /etc/ssh/sshd_config

# Create app directory and data volume
WORKDIR /app
RUN mkdir -p /app/data

# Copy project files
COPY . .

# Install networka using uv tool (follows documentation)
RUN uv tool install .

# Add uv tools to PATH for both root and networka user
ENV PATH="/root/.local/bin:$PATH"

# Make nw command available system-wide
RUN cp /root/.local/bin/nw /usr/local/bin/nw && \
    chmod +x /usr/local/bin/nw

# Ensure PATH includes system bins for networka user
RUN echo 'export PATH="/usr/local/bin:/root/.local/bin:$PATH"' >> /home/networka/.bashrc && \
    echo 'export PATH="/usr/local/bin:/root/.local/bin:$PATH"' >> /home/networka/.profile

# Setup SSH directory for networka user
RUN mkdir -p /home/networka/.ssh && \
    chown networka:networka /home/networka/.ssh && \
    chmod 700 /home/networka/.ssh

# Verify installation
RUN nw --help

# Expose SSH port
EXPOSE 22

# Copy entrypoint script
COPY docker/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Declare data volume
VOLUME ["/app/data"]

ENTRYPOINT ["/entrypoint.sh"]
CMD ["bash"]
